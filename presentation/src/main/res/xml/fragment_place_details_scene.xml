<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@layout/fragment_place_details_end"
        app:constraintSetStart="@layout/fragment_place_details_start"
        app:duration="500">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/recyclerView"
            app:touchAnchorSide="top" />

        <KeyFrameSet>

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="70"
                motion:motionTarget="@id/title" />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="70"
                motion:motionTarget="@id/backButton" />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="70"
                motion:motionTarget="@id/backButton2" />

            <KeyAttribute
                android:alpha="1"
                motion:framePosition="90"
                motion:motionTarget="@id/backButton2" />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="70"
                motion:motionTarget="@id/toolbarTitle" />

            <KeyAttribute
                android:alpha="1"
                motion:framePosition="90"
                motion:motionTarget="@id/toolbarTitle" />

            <KeyTrigger
                app:motionTarget="@id/button_directions_walk"
                motion:framePosition="10"
                motion:onCross="show" />

            <KeyTrigger
                app:motionTarget="@id/button_directions_walk"
                motion:framePosition="20"
                motion:onCross="hide" />

        </KeyFrameSet>

    </Transition>

</MotionScene>